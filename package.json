{
  "name": "@jimengio/rex",
  "version": "0.1.2",
  "description": "A very simplified Redux-like state manage tool with Immer built-in",
  "main": "./lib/rex.js",
  "types": "./lib/rex.d.ts",
  "scripts": {
    "format": "prettier src/*.tsx src/*/*.tsx rex/*.tsx  --write",
    "compile": "tsc -d --jsx react rex/*.tsx --outDir lib/",
    "dev": "webpack-dev-server --hot",
    "watch": "webpack-dev-server --hot",
    "release": "rm -rf dist/* && webpack --progress --config webpack.release.js",
    "build": "yarn release",
    "serve": "http-server dist/ -s",
    "postinstall": "rm -rfv node_modules/@types/*/node_modules/@types/react",
    "prepublish": "yarn compile"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/history": "^4.7.2",
    "@types/lodash": "^4.14.123",
    "@types/react": "^16.8.13",
    "@types/react-dom": "^16.8.3",
    "@types/shallowequal": "^1.1.1",
    "awesome-typescript-loader": "^5.2.1",
    "css-loader": "^2.1.1",
    "emotion": "^10.0.9",
    "file-loader": "^3.0.1",
    "font-awesome": "^4.7.0",
    "history": "^4.6.1",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.0",
    "lodash": "^4.17.11",
    "prettier": "^1.16.4",
    "randomcolor": "^0.5.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "ruled-router": "^0.2.2",
    "style-loader": "^0.23.1",
    "typescript": "^3.4.2",
    "typescript-styled-plugin": "^0.14.0",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.3.0",
    "webpack-hud": "^0.1.2"
  },
  "peerDependencies": {
    "react": "*",
    "immer": "*"
  },
  "dependencies": {
    "shallowequal": "*"
  }
}
