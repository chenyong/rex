{
  "name": "@jimengio/rex",
  "version": "0.1.4",
  "description": "A very simplified Redux-like state manage tool with Immer built-in",
  "main": "./lib/rex.js",
  "types": "./lib/rex.d.ts",
  "scripts": {
    "format": "prettier src/*.tsx src/*/*.tsx rex/*.tsx  --write",
    "compile": "rm -fr lib/* && tsc -d --project tsconfig-compile.json --outDir lib/",
    "dev": "webpack-dev-server --hot",
    "watch": "webpack-dev-server --hot",
    "release": "rm -rf dist/* && webpack --progress --config webpack.release.js",
    "build": "yarn release",
    "serve": "http-server dist/ -s",
    "postinstall": "rm -rfv node_modules/@types/*/node_modules/@types/react",
    "prepare": "yarn compile"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/history": "^4.7.2",
    "@types/lodash": "^4.14.136",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/shallowequal": "^1.1.1",
    "cache-loader": "^4.0.1",
    "css-loader": "^3.0.0",
    "emotion": "^10.0.14",
    "file-loader": "^4.0.0",
    "font-awesome": "^4.7.0",
    "fork-ts-checker-webpack-plugin": "^1.4.0",
    "history": "^4.9.0",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.0",
    "lodash": "^4.17.14",
    "prettier": "^1.18.2",
    "randomcolor": "^0.5.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "ruled-router": "^0.2.2",
    "style-loader": "^0.23.1",
    "thread-loader": "^2.1.2",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3",
    "typescript-styled-plugin": "^0.14.0",
    "url-loader": "^2.0.1",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.7.2",
    "webpack-hud": "^0.1.2"
  },
  "peerDependencies": {
    "immer": "*",
    "react": "*"
  },
  "dependencies": {
    "shallowequal": "*"
  }
}
